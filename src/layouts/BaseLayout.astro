---
import "../styles/global.css";
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Toolbar from "../components/Toolbar.astro";

const { icon, title, addFloater } = Astro.props;
const faviconString = `data:image/svg+xml,` + 
    `<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22>` +
        `<text y=%22.9em%22 font-size=%2290%22>${icon}</text>`+
    `</svg>`;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
        <link rel="icon" href={faviconString}>
		<meta name="viewport" content="width=device-width" />
		<title>{title} | hensing1.website</title>
        <style>
            .container {
                max-width: 1000px;
                margin: auto;
            }
            .layoutContent {
                width: 90%;
                margin: auto;
            }
        </style>
	</head>
	<body>
        <div class="container">
            <Header addFloater={addFloater}/>
            <Toolbar />
            <div class="layoutContent"><slot /></div>
            <Footer/>
        </div>
	</body>
</html>
