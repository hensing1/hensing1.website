---
import "../styles/global.css";
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Toolbar from "../components/Toolbar.astro";

const { icon, addFloater } = Astro.props;
const faviconString = `data:image/svg+xml,` + 
    `<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22>` +
        `<text y=%22.9em%22 font-size=%2290%22>${icon}</text>`+
    `</svg>`;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
        <link rel="icon" href={faviconString}>
		<meta name="viewport" content="width=device-width" />
		<title>wobsite</title>
        <style>
            .container {
                display: grid;
                grid-template-areas:
                    "header header"
                    "menu content"
                    "footer footer";
                grid-template-columns: 1fr 3fr;
                max-width: 1000px;
                margin: auto;
                /* gap: 5px; */
                /* background-color: #2196F3; */
                /* padding: 5px; */
            }
            .container > div {
                /* background-color: rgba(255, 255, 255, 0.8); */
                padding: 10px;
            }
            .container > div.header {
                grid-area: header;
                text-align: center;
            }
            .container > div.toolbar {
                grid-area: menu;
                margin-left: 0.5em;
                margin-right: 1em;
            }
            .container > div.content {
                grid-area: content;
            }
            .container > div.footer {
                grid-area: footer;
            }
        </style>
	</head>
	<body>
        <div class="container">
            <div class="header"> <Header addFloater={addFloater}/> </div>
            <div class="toolbar"> <Toolbar /> </div>
            <div class="content"> <slot /> </div>
            <div class="footer"> <Footer/> </div>
        </div>
	</body>
</html>
