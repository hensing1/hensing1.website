---
import BaseLayout from "../layouts/BaseLayout.astro";
import Masonry from "../components/ImageMasonry.astro";

import { getAlbumIDs, selectPics } from "../scripts/select_pics.ts";

export const icon = "ðŸ“¸";
export const title = "Photoblog";
export const index = 1;

const albumIDs = await getAlbumIDs("/Kanada%");

const featuredImages = await selectPics(albumIDs, 4);
---

<style>
    h1 {
        border-bottom: 2px solid black;
    }

    .single-file {
        display: none;
    }

    @media screen and (max-width: 636px) {
        .single-file {
            display: unset;
        }

        .double-file {
            display: none;
        }
    }
</style>

<BaseLayout icon={icon} title={title}>
    <h1>Pinterest des Grauens</h1>

    <h2>Aktuell</h2>
    <p class="text-with-button">
        Hi ich bin in Kanada!!!
        <a href="/photoblog/Kanada" class="redlink">zur Blogseite -&gt;</a>
    </p>

    <!-- sorry -->
    <div class="single-file">
        <Masonry images={featuredImages} numColumns={1} />
    </div>
    <div class="double-file">
        <Masonry images={featuredImages} numColumns={2} />
    </div>
</BaseLayout>
